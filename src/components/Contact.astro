<section id="contact" class="py-20">
  <div class="max-w-3xl mx-auto px-6 text-center">
    <h2 class="text-3xl font-semibold mb-10">Contact</h2>

    <form
      action="https://formspree.io/f/xxxxxxxx"
      method="POST"
      class="space-y-6 text-left bg-gray-50 p-8 rounded-2xl border border-gray-300"
    >
      <div>
        <label for="name" class="block text-sm font-medium text-gray-700 mb-1">お名前</label>
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full border border-gray-300 bg-white rounded-md px-4 py-2 focus:ring-2 focus:ring-gray-600 focus:border-gray-600 outline-none"
        />
      </div>

      <div>
        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">メールアドレス</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full border border-gray-300 bg-white rounded-md px-4 py-2 focus:ring-2 focus:ring-gray-600 focus:border-gray-600 outline-none"
        />
      </div>

      <div>
        <label for="message" class="block text-sm font-medium text-gray-700 mb-1">内容</label>
        <textarea
          id="message"
          name="message"
          rows="5"
          required
          class="w-full border border-gray-300 bg-white rounded-md px-4 py-2 focus:ring-2 focus:ring-gray-600 focus:border-gray-600 outline-none"
        ></textarea>
      </div>

      <div class="text-center pt-4">
        <button
          type="submit"
          class="bg-gray-900 text-white px-8 py-3 rounded-full font-medium hover:bg-gray-700 transition cursor-pointer"
        >
          送信する
        </button>
      </div>
    </form>
  </div>
</section>
