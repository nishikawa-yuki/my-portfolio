<header class="fixed top-0 left-0 w-full bg-white/80 backdrop-blur-md z-50 shadow-sm">
  <div class="max-w-6xl mx-auto flex items-center justify-between px-6 py-4">
    <!-- ロゴ -->
    <a href="/" class="text-xl font-semibold tracking-wide text-gray-800">NISHIKAWA</a>

    <!-- PCナビ -->
    <nav class="hidden md:flex space-x-8 text-gray-700 font-medium">
      <a href="#skills" class="hover:text-gray-900 transition">SKILLS</a>
      <a href="#career" class="hover:text-gray-900 transition">CAREER</a>
      <a href="#about" class="hover:text-gray-900 transition">ABOUT</a>
      <a href="#contact" class="hover:text-gray-900 transition">CONTACT</a>
    </nav>

    <!-- SPメニューアイコン -->
    <button id="menu-btn" class="relative md:hidden w-10 h-10 flex flex-col justify-center items-center group">
      <span class="block w-8 h-1 bg-gray-700 transition-all duration-300 origin-center translate-y-[-6px]"></span>
      <span class="block w-8 h-1 bg-gray-700 transition-all duration-300 origin-center"></span>
      <span class="block w-8 h-1 bg-gray-700 transition-all duration-300 origin-center translate-y-[6px]"></span>
    </button>
  </div>

  <!-- SPメニュー -->
  <div
    id="mobile-menu"
    class="overflow-hidden max-h-0 opacity-0 transition-all duration-500 ease-in-out md:hidden border-t border-gray-100 shadow-md"
  >
    <nav class="flex flex-col items-center py-4 space-y-4 text-gray-700 font-medium">
      <a href="#skills" class="hover:text-gray-900 transition">Skills</a>
      <a href="#career" class="hover:text-gray-900 transition">Career</a>
      <a href="#contact" class="hover:text-gray-900 transition">Contact</a>
    </nav>
  </div>
</header>

<script>
  const menuBtn = document.getElementById("menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");
  const bars = menuBtn.querySelectorAll("span");

  let isOpen = false;

  menuBtn.addEventListener("click", () => {
    isOpen = !isOpen;

    if (isOpen) {
      // ハンバーガー → ×
      bars[0].classList.add("rotate-45", "translate-y-[6px]");
      bars[1].classList.add("opacity-0");
      bars[2].classList.add("-rotate-45",);
      bars[2].classList.remove("translate-y-[6px]");

      // メニュー開く
      mobileMenu.classList.remove("max-h-0", "opacity-0");
      mobileMenu.classList.add("max-h-96", "opacity-100");
    } else {
      // × → ハンバーガー
      bars[0].classList.remove("rotate-45", "translate-y-[6px]");
      bars[1].classList.remove("opacity-0");
      bars[2].classList.remove("-rotate-45");
      bars[2].classList.add("translate-y-[6px]",);

      // メニュー閉じる
      mobileMenu.classList.remove("max-h-96", "opacity-100");
      mobileMenu.classList.add("max-h-0", "opacity-0");
    }
  });
</script>
