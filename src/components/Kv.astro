<div class="p-kv">
    <canvas id="kv-canvas"></canvas>
    <h1 class="text-7xl italic font-semibold text-center relative z-10"><span class="text-3xl font-normal">My Protfolio</span><br>西川勇気</h1>
</div>

<style>
    .p-kv {
        width: 100vw;
        height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }
    #kv-canvas {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }
</style>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const canvas = document.getElementById("kv-canvas");
  const ctx = canvas.getContext("2d");

  // ✅ ヘッダーの高さを取得して.p-kvにmarginを付与
  const header = document.querySelector("header");
  const kv = document.querySelector(".p-kv");

  function adjustKvMargin() {
    if (header && kv) {
      const headerHeight = header.offsetHeight;
      kv.style.marginTop = `${headerHeight}px`;
    }
  }
  // 初回実行＋リサイズ時に再計算
  adjustKvMargin();
  window.addEventListener("resize", adjustKvMargin);

  // リサイズ対応
  function resizeCanvas() {
    canvas.width = canvas.clientWidth;
    canvas.height = canvas.clientHeight;
  }
  window.addEventListener("resize", resizeCanvas);
  resizeCanvas();

  const colors = [
    "#2B2B2B", // 黒に近い
    "#333333",
    "#555555",
    "#777777",
    "#999999",
    "#BBBBBB",
    "#DDDDDD"
  ];

  class Circle {
    constructor() {
      this.reset();
    }

    reset() {
        const isSP = window.innerWidth < 768;
        this.radius = isSP ?  Math.random() * 50 + 30 : Math.random() * 100 + 70;

      this.x = Math.random() * (canvas.width - this.radius * 2) + this.radius;
      this.y = Math.random() * (canvas.height - this.radius * 2) + this.radius;

      // 動きの速度と方向
      const speed = Math.random() * 1.2 + 0.3;
      const angle = Math.random() * Math.PI * 2;
      this.vx = Math.cos(angle) * speed;
      this.vy = Math.sin(angle) * speed;

      this.color = colors[Math.floor(Math.random() * colors.length)];
    }

    move() {
      this.x += this.vx;
      this.y += this.vy;

      // 壁で反射
      if (this.x - this.radius < 0 || this.x + this.radius > canvas.width) {
        this.vx *= -1;
        this.vx += (Math.random() - 0.5) * 0.3;
        this.x = Math.min(Math.max(this.x, this.radius), canvas.width - this.radius);
      }
      if (this.y - this.radius < 0 || this.y + this.radius > canvas.height) {
        this.vy *= -1;
        this.vy += (Math.random() - 0.5) * 0.3;
        this.y = Math.min(Math.max(this.y, this.radius), canvas.height - this.radius);
      }
    }

    draw() {
      ctx.beginPath();
      ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
      ctx.fillStyle = this.color;
      ctx.globalAlpha = 0.7;
      ctx.fill();
      ctx.closePath();
      ctx.globalAlpha = 1.0;
    }
  }

  // 円の数（少なめ）
  const circles = Array.from({ length: 5 }, () => new Circle());

  // アニメーションループ
  function animate() {
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    circles.forEach(c => {
      c.move();
      c.draw();
    });
    requestAnimationFrame(animate);
  }
  animate();
});
</script>

